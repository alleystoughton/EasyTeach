#!/bin/bash

# check all the EasyCrypt scripts

# SMT timeout in seconds -- try increasing

timeout=2

check() {
  echo checking $1;
  if easycrypt -timeout $timeout $1;
  then echo passed: $1;
       echo "";
  else echo failed: $1;
       echo "";
       echo "skipping remaining scripts";
  exit 1;
  fi;
}

check SimpLogic-initial.ec
check SimpLogic.ec
check RndEx.ec
check SMC.ec

# success!

exit 0
